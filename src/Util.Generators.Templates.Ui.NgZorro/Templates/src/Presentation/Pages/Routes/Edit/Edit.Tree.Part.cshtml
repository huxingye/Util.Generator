@* Ui层项目组件导入文件 *@
@using Util.Generators.Helpers
@model Util.Generators.Contexts.EntityContext
@{
    var service = new GenerateService( Model );
    Model.Output.FileNameNoExtension = "Edit";
    Model.Output.Extension = ".cshtml";
    Model.Output.RelativeRootPath = $"src/{service.GetUiProjectName()}/Pages/Routes/{service.GetClientAppTitleName()}/{service.EntityName}";
}
@("@page")
@("@model") @(service.EntityName)Dto

@*标题*@
<util-page-header2 title="编辑@(service.EntityDescription)" auto-breadcrumb="false"></util-page-header2>
@*表单*@
<util-card borderless="true">
    <util-form label-span="4" control-span="20" gutter="16">
        <util-form-item>
            <util-form-label>父模块</util-form-label>
            <util-form-control>
                <util-label for="ParentName"/>
                <util-button class="ml-sm" type="Primary" shape="Circle" icon="Search" tooltip-title="请选择父模块" on-click="openSelectDialog()"></util-button>
            </util-form-control>
        </util-form-item>
        @foreach (var property in Model.Properties)
        {
            if (property.IsKey)
                continue;
            if (property.IsDelete)
                continue;
            if (property.IsExtraProperties)
                continue;
            if (property.IsVersion)
                continue;
            if (property.IsDateTime)
            {
                <util-date-picker for="@property.Name"/>
                continue;
            }
            if (property.IsBool)
            {
                <util-switch for="@property.Name"/>
                continue;
            }
            <util-input for="@property.Name"/>
        }
        <util-row justify="End">
            <util-button on-click="close()">取消</util-button>
            <util-button id="btnSubmit" validate-form="true" type="Primary" on-click="submit(btnSubmit)">确定</util-button>
        </util-row>
    </util-form>
</util-card>
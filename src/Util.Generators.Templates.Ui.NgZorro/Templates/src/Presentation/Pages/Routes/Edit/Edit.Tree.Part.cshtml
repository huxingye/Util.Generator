@* UiUi层项目 - 树形编辑页文件 *@
@using Util.Generators.Helpers
@model Util.Generators.Contexts.EntityContext
@{
    var service = new GenerateService( Model );
    var description = service.EntityDescription;
}
@("@page")
@("@model") @(service.EntityName)Dto

@*标题*@
<util-page-header2 title="编辑@(description)" auto-breadcrumb="false" [syncTitle]="false"></util-page-header2>
@*表单*@
<util-card borderless="true">
    <util-form label-span="4" control-span="20" gutter="16">
        <util-tree-select for="ParentId" query-param="queryParam" url="@service.GetClientEntityName()/tree" @service.GetClientSort() default-expand-all="true" label-text="父@(description)" control-span="8"></util-tree-select>
        @foreach (var property in Model.Properties)
        {
            if (property.IsParentId)
                continue;
            if (property.IsKey)
                continue;
            if (property.IsDeleted)
                continue;
            if (property.IsExtraProperties)
                continue;
            if (property.IsVersion)
                continue;
            if (property.IsAudited)
                continue;
            if (property.IsTree)
                continue;
            if (property.IsDateTime)
            {
        <util-date-picker for="@property.Name"/>
                continue;
            }
            if (property.IsBool)
            {
        <util-switch for="@property.Name"/>
                continue;
            }
        <util-input for="@property.Name"/>
        }
        <util-row justify="End">
            <util-button on-click="close()">取消</util-button>
            <util-button id="btnSubmit" validate-form="true" type="Primary" on-click="submit(btnSubmit)">确定</util-button>
        </util-row>
    </util-form>
</util-card>
@* Ui层项目 - 列表页文件 *@
@using Util.Generators.Helpers
@model Util.Generators.Contexts.EntityContext
@{
    var service = new GenerateService( Model );
}
@("@")page
@("@")model @service.GetDto()
<util-page-header2 title="@service.EntityDescription"></util-page-header2>
<util-card borderless="true">
    @*查询表单*@
    <partial name="Index.Query" />
    @*工具按钮*@
    <util-button type="Primary" icon="Plus" on-click="openCreateDialog()">新建</util-button>
    <util-button type="Primary" Danger="true" icon="Delete" on-click="delete()">删除</util-button>
    @*提示语*@
    <util-alert type="Info" show-icon="true" class="my-md">
        已选择<strong class='text-primary mx-xs'>{{getCheckedLength()}}</strong>行
    </util-alert>
    @*表格*@
    <util-table id="@service.GetClientTableId()" show-checkbox="true" show-line-number="true" query-param="queryParam" url="@service.GetClientEntityName()" @service.GetClientSort()>
        @foreach ( var property in Model.Properties ) {
            if ( property.IsKey )
                continue;
            if ( property.IsExtraProperties )
                continue;
            if ( property.IsVersion )
                continue;
            if ( property.IsDeleted )
                continue;
            if ( property.IsAudited )
                continue;
        <util-td for="@property.Name"></util-td>
        }
        <util-td title="操作">
            <util-button type="Link" size="Small" tooltip-title="编辑" on-click="openEditDialog(row)">编辑</util-button>
            <util-divider type="Vertical"></util-divider>
            <util-a on-click="openDetailDialog(row)">查看</util-a>
            <util-divider type="Vertical"></util-divider>
            <util-button type="Link" size="Small" danger="true" tooltip-title="删除" on-click="delete(row.id)">删除</util-button>
        </util-td>
    </util-table>
</util-card>
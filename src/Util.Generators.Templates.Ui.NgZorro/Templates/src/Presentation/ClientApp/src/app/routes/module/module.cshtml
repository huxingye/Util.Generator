@* Ui层项目 - 模块文件 *@
@using Util.Generators.Helpers
@model Util.Generators.Contexts.EntityContext
@{
    var service = new GenerateService( Model );
    Model.Output.FileNameNoExtension = service.GetClientModuleFileName();
    Model.Output.Extension = ".ts";
    Model.Output.RelativeRootPath = $"src/{service.GetUiProjectName()}/ClientApp/src/app/routes/{service.GetClientModuleFolderName()}";
}
import { NgModule } from '@@angular/core';
import { SharedModule } from '@@shared/shared.module';
import { @service.GetClientRoutingModuleClassName() } from './@service.GetClientRoutingModuleFileName()';
@foreach (var entity in service.GetEntities())
{
    <text>
import { @(entity.Name)ListComponent } from './@service.GetClientEntityName(entity)/@(service.GetClientEntityName(entity))-list.component';
import { @(entity.Name)EditComponent } from './@service.GetClientEntityName(entity)/@(service.GetClientEntityName(entity))-edit.component';
import { @(entity.Name)DetailComponent } from './@service.GetClientEntityName(entity)/@(service.GetClientEntityName(entity))-detail.component';
    </text>
}

/**
* @(Model.ProjectContext.ClientAppName)模块
*/
@@NgModule( {
    declarations: [
@foreach (var entity in service.GetEntities())
{
    <text>
        @(entity.Name)ListComponent, @(entity.Name)EditComponent, @(entity.Name)DetailComponent,
    </text>
}
    ],
    imports: [
        SharedModule,@service.GetClientRoutingModuleClassName()
    ],
    providers: [
    ],
    entryComponents: [
@foreach (var entity in service.GetEntities())
{
    <text>
        @(entity.Name)EditComponent, @(entity.Name)DetailComponent,
    </text>
}
    ]
} )
export class @service.GetClientModuleClassName() {
}
